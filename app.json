{
  "name": "idone",
  "scripts": {
    "postdeploy": "bin/rails heroku_review_apps:create_bucket",
    "pr-predestroy": "bin/rails heroku_review_apps:cleanup"
  },
  "env":  {
    "GCS_PROJECT_ID": {
      "required": true
    },

    "GCS_PRIVATE_KEY_ID": {
      "required": true
    },

    "GCS_PRIVATE_KEY": {
      "required": true
    },

    "GCS_CLIENT_ID": {
      "required": true
    },

    "GCS_CLIENT_EMAIL": {
      "required": true
    },

    "GCS_X509_CERT_URL": {
      "required": true
    },

    "LANG": {
      "required": true
    },
    "PAPERTRAIL_API_TOKEN": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "REDIS_URL": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "SENDGRID_PASSWORD": {
      "required": true
    },
    "SENDGRID_USERNAME": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "JEMALLOC_ENABLED": {
      "value": "true"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    },
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:hobby-dev",
      "as": "REDIS"
    },
    {
      "plan": "sendgrid:starter",
      "as": "SENDGRID"
    },
    {
      "plan": "papertrail:choklad"
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/gaffneyc/heroku-buildpack-jemalloc"

    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "stack": "heroku-18"
}
