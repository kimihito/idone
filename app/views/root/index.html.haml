- if policy(Track).new?
  .col-12
    = form_with model: TrackForm.new(owner: current_user), data: { type: 'html', controller: 'autocomplete form', action: 'ajax:error->form#onSaveFail' }, url: root_tracks_url do |f|
      %div{data: {target: 'form.errors' }}
      .col-10.mb-3.pr-2.float-left
        = f.text_field :raw_body, class: 'form-control input-block', autocomplete: 'off', data: { target: 'autocomplete.rawBody' }
      .col-2.mb-3.float-left
        = f.submit class: 'btn btn-block btn-primary'

.col-lg-3.col-12.float-left.pr-lg-3
  .Box.border-0
    .Box-body
      Hi
    .Box-footer
      HiHI

.col-lg-9.col-12.float-left
  - @tracks_by_date.each do |date, tracks|
    .Box.mb-2.track
      .Box-header
        %h3.Box-title
          = date
      %ul
        =render tracks
  =render 'layouts/pagination', pagy: @pagy
