- if policy(Track).new?
  .col-12
    = form_with model: TrackForm.new(owner: current_user), data: { type: 'html', controller: 'autocomplete form', action: 'ajax:error->form#onSaveFail' }, url: root_tracks_url do |f|
      %div{data: {target: 'form.errors' }}
      .col-10.mb-3.pr-2.float-left
        %dl.form-group.m-0.errored
          %dd
            = f.text_field :raw_body, class: 'form-control input-block width-full', placeholder: t('.placeholder.use_hashtag'), autocomplete: 'off', data: { target: 'autocomplete.rawBody', action: 'input->autocomplete#validProject tribute-replaced->autocomplete#validProject' }
            = f.hidden_field :project_id, data: { target: 'autocomplete.projectId' }
          %dd.error{data: {target: 'autocomplete.error'}}
      .col-2.mb-3.float-left
        = f.submit class: 'btn btn-block btn-primary'

.col-lg-3.col-12.float-left.pr-lg-3
  .Box.border-0
    .Box-body
      Hi
    .Box-footer
      HiHI

.col-lg-9.col-12.float-left
  - @tracks_by_date.each do |date, tracks|
    .Box.mb-2.track
      .Box-header
        %h3.Box-title
          = date
      %ul
        =render tracks
  =render 'layouts/pagination', pagy: @pagy
