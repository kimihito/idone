.flex-self-start.flex-auto.flex-shrink-0.pr-lg-3.mb-3
  - @tracks_by_date.each do |date, tracks|
    .Box.mb-2.track
      .Box-header
        %h3.Box-title
          = date
      - tracks.group_by(&:owner_id).each do |owner_id, ts|
        .Box-body
          =owner_id
          %ul
            =render ts
  =render 'layouts/pagination', pagy: @pagy

