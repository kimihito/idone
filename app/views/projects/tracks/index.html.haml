.col-lg-3.col-12.float-left.pr-lg-3
  =render 'projects/layouts/summary', project: @project
.col-lg-9.col-12.float-left
  =render 'projects/navigation', project: @project
  - @tracks_by_date.each do |date, tracks|
    .Box.mb-2.track
      .Box-header
        %h3.Box-title
          = date
      - tracks.group_by(&:owner).each do |owner, ts|
        .Box-body
          = link_to user_overview_path(owner), class: 'link-gray-dark' do
            = image_tag owner.icon.attached? ? owner.icon.variant(combine_options: { resize: "150x150^", crop: "150x150+0+0", gravity: :center }) : '', class: 'avatar mr-1', size: 30, data: { controller: 'avatar', 'avatar-seed': owner.name }
            %span
              = owner.name
          %ul
            =render ts
  =render 'layouts/pagination', pagy: @pagy