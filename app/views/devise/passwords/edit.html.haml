- content_for :title do
  = t('.change_my_password')
- content_for :submit do
  = t('.change_your_password')

= render 'devise/shared/form_box', url: password_path(resource_name), html: { method: :put } do |f|
  = f.hidden_field :reset_password_token
  %dl.form-group
    %dt
      %label= f.label :password, t('devise.passwords.edit.new_password')
      - if @minimum_password_length
        %em
          = "(#{t('devise.registrations.new.charactors_minimum', count: @minimum_password_length)})"
    %dd
      = f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control'
  %dl.form-group
    %dt
      %label= f.label :password_confirmation, t("devise.passwords.edit.confirm_new_password")
    %dd
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"