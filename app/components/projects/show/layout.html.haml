.col-lg-9.col-12.float-left.pr-lg-3
  .Box.border-0
    .Box-row
      .d-flex.flex-items-center.p-2
        .p-2
          = project.icon_image(class: 'avatar', size: 96)
        .pl-4.m-0
          %h3.d-block.h3
            = project.title
          = simple_format(project.description_with_placeholder, class: 'lh-default')
          = render project.tags
      .d-flex.flex-column.px-2
        .pt-1
          %i.mr-1.v-align-text-top{ data: { feather: 'refresh-cw'}, 'stroke-width': 1 }
          = l(project.updated_at.to_date)
        - if view_context.policy(project).update?
          = link_to t('components.projects.show.layout.edit'), edit_project_path(project), class: 'btn btn-sm btn-block mt-2 mb-3 col-md-2'


.col-lg-3.col-12.float-left.pr-lg-3
  .Box.border-0
    .Box-header.bg-white.border-top-0.border-left-0.border-right-0
      .Box-title Made by
    .Box-row
      .d-flex.flex-items-center.p-2
        = link_to user_overview_path(project.owner), class: 'd-block link-gray-dark' do
          = project.owner.icon_image(class: 'avatar mr-1', size: 30)
          %strong
            = project.owner.name

.col-lg-9.col-12.float-left.pr-lg-3
  = render(Projects::Show::Navigation, project: project)
  = content
