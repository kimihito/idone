{
    "editor.fontSize": 14,
    "[ruby]": {
        "editor.formatOnSave": true
    },
    "ruby.format": "rubocop",
    "editor.formatOnSaveTimeout": 1500
    "ruby.lint": {
        "rubocop": {
          "command": "docker-compose exec rails bundle exec rubocop",
          "lint": true,
          "rails": true
        },
        "reek": {
          "command": "docker-compose exec rails bundle exec reek"
        }
    },
    "solargraph.logLevel": "debug",
    "solargraph.transport": "external",
    "solargraph.diagnostics": true,
    "solargraph.hover": false,
    "solargraph.externalServer": {
        "host": "localhost",
        "port": 7658
    }
}
